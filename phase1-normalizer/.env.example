# Security Alert Normalizer â€” Environment Configuration
# Copy this file to .env and fill in your API keys.
# Never commit the .env file to version control.

# VirusTotal API key (free tier: https://www.virustotal.com/gui/join-us)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# AbuseIPDB API key (free tier: https://www.abuseipdb.com/register)
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# Optional: Webhook URL to POST normalized alerts to
# Get a free test URL at https://webhook.site
WEBHOOK_URL=

# Optional: HTTP client settings (defaults shown)
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5

# Optional: Default output file name
OUTPUT_FILE=normalized_alerts.json
