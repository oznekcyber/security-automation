# AWS GuardDuty Response System â€” Environment Configuration
# Copy this file to .env and fill in your values.
# Never commit the .env file to version control.

# AWS region where GuardDuty detector and responders are deployed
AWS_REGION=us-east-1

# AWS Account ID (used for constructing ARNs)
AWS_ACCOUNT_ID=123456789012

# TheHive integration (from Phase 4)
THEHIVE_URL=http://localhost:9000
THEHIVE_API_KEY=your_thehive_api_key_here

# Splunk HEC integration (from Phase 2)
SPLUNK_HEC_URL=https://your-splunk-instance:8088
SPLUNK_HEC_TOKEN=your_splunk_hec_token_here

# Slack notification webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXX

# SNS topic ARN for notifications (set after CDK deploy)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:guardduty-findings

# Quarantine security group name (created by CDK)
QUARANTINE_SG_NAME=guardduty-quarantine

# SSM parameter path prefix
SSM_PARAMETER_PREFIX=/guardduty-response

# CDK deployment environment
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1
