# ============================================================
# Phase 3 SOAR Incident Response â€” Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# Never commit the .env file to source control.

# ----------------------------------------------------------
# VirusTotal API
# ----------------------------------------------------------
# Free tier: 500 lookups/day. Get a key at https://www.virustotal.com/
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ----------------------------------------------------------
# AbuseIPDB API
# ----------------------------------------------------------
# Free tier: 1000 checks/day. Register at https://www.abuseipdb.com/
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# ----------------------------------------------------------
# TheHive
# ----------------------------------------------------------
# Self-hosted or cloud TheHive instance URL (no trailing slash)
THEHIVE_URL=http://localhost:9000
# API key from TheHive user management (Organization > API Keys)
THEHIVE_API_KEY=your_thehive_api_key_here

# ----------------------------------------------------------
# Slack
# ----------------------------------------------------------
# Incoming Webhook URL from your Slack App configuration
# https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_TOKEN

# ----------------------------------------------------------
# Splunk HEC (HTTP Event Collector)
# ----------------------------------------------------------
SPLUNK_HEC_URL=https://splunk.example.com:8088/services/collector/event
SPLUNK_HEC_TOKEN=your_splunk_hec_token_here

# ----------------------------------------------------------
# Shuffle SOAR
# ----------------------------------------------------------
# Workflow webhook trigger URL (shown in the Trigger node settings)
SHUFFLE_WEBHOOK_URL=http://localhost:3001/api/v1/hooks/your_hook_id_here
